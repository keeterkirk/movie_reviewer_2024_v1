<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Total gross:</strong>
    <%= total_gross(movie) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Released On:</strong>
    <%#= debug(movie) %>
    <%= year_of(movie)%>
  </p>

</div>
